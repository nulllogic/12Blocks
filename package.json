{
  "name": "@nulllogic/16grid",
  "description": "Most advanced responsive front-end CSS framework",
  "version": "1.0.1",
  "version_short": "1.0",
  "keywords": [
    "css",
    "sass",
    "mobile-first",
    "responsive",
    "front-end",
    "css-framework",
    "framework",
    "web"
  ],
  "scripts": {
    "css": "npm run css-compile",
    "css-compile": "sass --style expanded --source-map --embed-sources scss/:dist/css/",
    "dist": "npm run css && npm run minify",
    "minify": "cleancss -O1 --format breakWith=lf --with-rebase --source-map --source-map-inline-sources --output dist/css/ --batch --batch-suffix \".min\" \"dist/css/*.css\" \"!dist/css/*.min.css\" \"!dist/css/*rtl*.css\"",
    "docs-build" : "docker run --rm -it -v $(pwd):/src klakegg/hugo:ext-alpine",
    "docs-serve" : "docker run --rm -it -v $(pwd):/src -p 8000:1313 klakegg/hugo:ext-alpine server"
  },

  "devDependencies": {
    "node-sass": "^7.0.0",
    "sass": "^1.45.0",
    "clean-css-cli" : "^5.4.2"
  },
  "homepage": "https://nulllogic.github.io/16grid",
  "main": ".babelrc.js",
  "style": "dist/16grid.css",
  "sass": "scss/16grid.scss",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nulllogic/16grid.git"
  },
  "author": "Vladimir Lukyanov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nulllogic/16grid/issues"
  }
}
